{
	"name": "alexpage.com.au",
	"version": "1.0.0",
	"description": "Personal website of Alex Page.",
	"author": {
		"name": "Alex Page",
		"email": "alex@alexpage.com.au",
		"url": "http://alexpage.com.au/"
	},
	"contributors": [
		{
			"name": "Alex Page",
			"email": "alex@alexpage.com.au",
			"url": "http://alexpage.com.au"
		}
	],
	"scripts": {
		"deploy": "git subtree push --prefix site origin gh-pages",
		"build:autoprefix": "postcss src/assets/css/*.css --use autoprefixer --replace --no-map",
		"build:sass": "mkdirp src/assets/css/ && node-sass src/sass/ --output-style compressed --output src/assets/css",
		"build:css": "npm run build:sass && npm run build:autoprefix",
		"build:js-footer": "concat-cli -f src/js/footer/*.js -o src/assets/js/footer.min.js",
		"build:uglify": "uglifyjs src/assets/js/footer.min.js --compress --output src/assets/js/footer.min.js",
		"build:js": "mkdirp src/assets/js/ && npm run build:js-footer && npm run build:uglify",
		"build:sw": "rm -f site/sw.js && cp src/js/sw.js site/sw.js",
		"build:assets": "npm run build:css && npm run build:autoprefix && npm run build:js",
		"build": "npm run build:assets && npm run build:sw",
		"watch:sass": "onchange 'src/sass/**/*.scss' -- npm run build:css",
		"watch:js": "onchange 'src/js/**/*.js' -- npm run build:js",
		"watch:sw": "onchange 'src/js/sw.js' -- npm run build:sw",
		"watch:site": "",
		"watch": "npm run build && npm run watch:sass | npm run watch:js | npm run watch:sw"
	},
	"engines": {
		"node": "10"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alex-page/alex-page.github.io"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/alex-page/alex-page.github.io/issues"
	},
	"homepage": "https://github.com/alex-page/alex-page.github.io#readme",
	"dependencies": {
		"autoprefixer": "^7.2.3",
		"concat-cli": "^4.0.0",
		"copy": "^0.3.1",
		"cuttlebelle": "^1.0.0-alpha.56",
		"harmonograph": "^0.1.0",
		"mkdirp": "^0.5.1",
		"node-sass": "^4.11.0",
		"postcss-cli": "^4.1.1",
		"uglify-js": "^3.3.4"
	},
	"devDependencies": {
		"onchange": "^3.3.0"
	},
	"browserslist": [
		"last 2 versions",
		"ie 8",
		"ie 9",
		"ie 10"
	]
}
